<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Abril+Fatface&family=Raleway&display=swap" rel="stylesheet"> 
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.1/css/bulma.min.css">
    <link rel="stylesheet" href="/stylesheets/home.css">
    <link rel="stylesheet" href="/stylesheets/navbar.css">
    <title>jReads</title>
</head>
<body>

  <div class="parallax-splash"></div>


<div class="wrapper-splash">
  <section class="section">
    <div class="columns is-centered section-splash">
      <div class="column is-8">
        <div class="container login-splash">
          <h1 class="title is-1 has-text-light has-text-centered"><span class="logo-style">jReads</span></h1>

          <form action="/login" method="POST">
            <div class="field">
              <div class="label is-medium">
                <label for="username" class="label has-text-light">Username</label>
              </div>
              <div class="field-body">
                <div class="field">
                  <div class="control">
                    <input class="input is-medium" type="text" name="username" required>
                  </div>
                </div>
              </div>
            </div>

            <div class="field">
              <div class="label is-medium">
                <label for="password" class="label has-text-light">Password</label>
              </div>
              <div class="field-body">
                <div class="field">
                  <div class="control">
                    <input class="input is-medium" type="password" name="password" required>
                  </div>
                </div>
              </div>
            </div>

            <div class="field is-horizontal">
              <div class="field-body">
                <div class="field is-grouped is-grouped-centered">
                  <div class="control">
                    <button class="button button-splash is-success is-medium">Login</button>
                  </div>
                  <div class="control">
                    <a href="/library" class="button button-splash is-info is-medium">Guest</a>
                  </div>


              </div>
            </div>
          </div>
          <div class="level">
            <div class="level-item has-text-centered">
              <div class="control">
                <a href="/register" class="has-text-light">Sign Me Up</a>
              </div>
            </div>

          </div>

          </form>
        </div>
      </div>
    </div>
  </section>
</div>

