<%- include("./partials/header") %>

<div class="wrapper">
  <% if(messages.length > 0){ %>
    <div class="notification is-link mt-4">
      <button class="delete mr-2"></button>
        <p class="has-text-centered has-text-weight-semibold is-size-5"><%=messages[0]%></p>
    </div>
  <%}%>

    <section class="section">
      <div class="columns is-mobile">
        <div class="column box shelves">
          <h3 class="title is-3 has-text-light">Update Your Comment</h3>
          <article class="media">
            <div class="media-content">
              <div class="box content">
                <form action="/myBook/<%=bookId%>/comments/<%=comment.id%>?_method=PUT" method="POST">
                  <input name="username" type="text" value="<%=currentUser%>" hidden>
                  <div class="field">
                    <p class="control">
                      <textarea name="message" cols="30" rows="5" class="textarea" ><%=comment.message%></textarea>
                    </p>
                  </div>
                  <div class="field">
                    <p class="control">
                      <button class="button is-success">Update</button>
                    </p>
                  </div>
                </form>
                <form action="/myBook/<%=bookId%>" method="GET">
                  <div class="field">
                    <p class="control">
                      <button class="button is-danger">Cancel</button>
                    </p>
                  </div>
                </form>
              </div>
            </div>
          </article>
        </div>
      </div>
    </section>
</div>
<%- include("./partials/footer") %>

