<%- include("./partials/header") %>

<div class="wrapper">
    <section class="section">
        <div class="columns">
            <div class="column is-one-quarter-tablet is-one-fifth-desktop has-text-light leftDisplayFrame has-text-centered">
                <% if(currentUser){ %>
                  <h3 class="is-3 pb-6">jReads Collection</h3>
                  <p>Every book listed in our users' libraries.</p><br>
                  <p class="is-4 is-capitalized"><a href="/home">Your Collection</a></p>
                <% } else { %>
                  <h3 class="is-3 pb-6">jReads Collection</h3>
                  <p>Every book listed in our user's libraries.</p><br><br>
                  <p>Please <a href="/register">sign up</a> or <a href="/login">log in</a> to create your own book list.</p>
                <% } %>

            </div>
            <div class="column is-three-quarters is-four-fifths-desktop">
              <div class="container shelves">
                <div class="columns is-centered is-multiline is-mobile">
                  <% if(library.length === 0 ){ %>
                    <div class="column is-half-mobile is-one-quarter-tablet is-one-fifth-desktop">
                      <div class="box bookCard is-primary">
                        <p>To add a book, use the search in the navbar.</p>
                      </div>
                    </div>
                  <% } %>
                  <% for(let i = 0; i < library.length; i++){ %>
                    <div class="column is-half-mobile is-one-quarter-tablet is-one-fifth-desktop">
                      <div class="box bookCard">
                        <a href="/myBook/<%=library[i]._id%>">
                          <figure class="image">
                            <img src= <%=library[i].imageLinks.thumbnail%> alt="Book cover for <%=library[i].title%>">
                            <figcaption>
                                <%=library[i].title%>
                            </figcaption>
                          </figure>
                          </a>
                      </div>
                    </div>
                  <% } %>  

                </div>
              </div>
            </div>
    </section>
</div>

<%- include("./partials/footer") %>