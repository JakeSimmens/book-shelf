<%- include("./partials/header") %>

<div class="wrapper">
    <section class="section">
      
        <div class="columns">

            <div class="column is-one-quarter-tablet is-one-fifth-desktop has-text-light leftDisplayFrame has-text-centered">
              
                <% if(currentUser){ %>
                  <h3 class="is-3 is-capitalized pb-6"><%=currentUser%>'s Book Collection</h3>
                  <br><p><a href="/library">jReads Collection</a></p>
              <% } else { %>
                  <h3 class="is-3 pb-6">Welcome!</h3>
                  <p>Please <a href="/register">sign up</a> or <a href="/login">log in</a> to create your own book list.</p>
              <% } %>
              

            </div>

            <div class="column is-three-quarters is-four-fifths-desktop">
              <div class="container shelves">
                <div class="columns is-centered is-multiline is-mobile">
                  <% if(myLibrary.length === 0 ){ %>
                    <div class="column is-half-mobile is-one-quarter-tablet is-one-fifth-desktop">
                      <div class="box bookCard is-primary has-text-centered">
                        <p>To add a book, use the search in the navbar.</p>
                      </div>
                    </div>
                    <div class="column is-half-mobile is-one-quarter-tablet is-one-fifth-desktop">
                      <div class="box bookCard has-text-centered">
                        <p>Get inspired by what other users have picked.</p>
                        <p><a href="/library">Take a look.</a></p>
                      </div>
                    </div>
                  <% } %>
                  <% for(let i = 0; i < myLibrary.length; i++){ %>
                    <div class="column is-half-mobile is-one-quarter-tablet is-one-fifth-desktop">
                      <div class="box bookCard">
                        <a href="/myBook/<%=myLibrary[i]._id%>">
                          <figure class="image">
                            <img src= <%=myLibrary[i].imageLinks.thumbnail%> alt="Book cover for <%=myLibrary[i].title%>">
                            <figcaption>
                                <%=myLibrary[i].title%>
                            </figcaption>
                          </figure>
                          </a>
                      </div>
                    </div>
                  <% } %>  

                </div>
              </div>
            </div>
    </section>
</div>

<%- include("./partials/footer") %>